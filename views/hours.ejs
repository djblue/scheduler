<!doctype html>
<html ng-app="app" lang="en">
<head>
    <title>Submit Hours</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <link rel="stylesheet" type="text/css" href="">
    <script src="/bower_components/underscore/underscore-min.js"/></script>
    <script src="/bower_components/angular/angular.min.js"></script>
    <script>
        /* grab user info */
        window.staff = <%- staff %>;
        console.log(window.staff);
    </script>
    <script src="/javascripts/hours.js"></script>
    <script src="//djblue.us.to:35729/livereload.js"></script>
    <link rel="stylesheet" type="text/css" href="/bower_components/pure/base-min.css">
    <link rel="stylesheet" type="text/css" href="/bower_components/pure/pure-min.css">
    <link rel="stylesheet" type="text/css" href="/styles/default.css">
</head>
<body ng-controller="hoursController">

<div class="pure-g-r">

    <div class="center pure-u-3-5">
        <h1>Please Select Availability</h1>
        <div class="check-list">
            <span>Time</span>
            <ol>
                <li class="time" ng-repeat="time in times" >{{ time }} </li>
            </ol>
        </div>
        <div list="days.monday" check-list>M</div>
        <div list="days.tuesday" check-list>Tu</div>
        <div list="days.wednesday" check-list>W</div>
        <div list="days.thursday" check-list>Th</div>
        <div list="days.friday" check-list>F</div>
    </div>

    <div class="pure-u-2-5">
        <h1>{{ staff.name }}</h1>
        <h2>{{ staff.email }}</h2>
        <h2>{{ staff.major.title }}</h2>
        <input ng-model="maxHours" type="text" placeholder="Maximum Hours">
        <input ng-model="phoneNumber" type="text" placeholder="Phone Number">
        <h1>Select Courses</h1>
        <select multiple ng-model="selectedCourses">
            <optgroup label="{{subject}}" 
                ng-repeat="(subject, courses) in catalog">
                <option value="{{course._id}}" ng-repeat="course in courses">
                    {{course.subject.prefix}} {{course.number}}: {{course.title}}
                </option>
            </optgorup>
        </select>
    </div>
    <div class="pure-u-1">
        <button style="float: right;"
            class="pure-button pure-button-primary" ng-click="submit()">Submit</button>
    </div>
</div>

</body>
</html>
