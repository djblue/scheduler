<!doctype html>
<html ng-app="app" lang="en">
<head>
    <title>Submit Hours</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <link rel="stylesheet" type="text/css" href="">
    <script src="/bower_components/underscore/underscore-min.js"/></script>
    <script src="/bower_components/jquery/jquery.min.js"/></script>
    <script src="/bower_components/multiselect/js/jquery.multi-select.js"/></script>
    <script src="/bower_components/angular/angular.min.js"></script>
    <script>
        /* user info */
        window.staff = <%- staff %>;
    </script>
    <script src="/javascripts/hours.js"></script>
    <link rel="stylesheet" type="text/css" href="/styles/main.css">
    <link rel="stylesheet" type="text/css" href="/bower_components/multiselect/css/multi-select.css"  >
    <style>
        body {
            padding: 0;
            margin: 0;
        }
        .left-column {
            width: 49%;
        }
        .right-column {
            width: 49%;
        }
        div[class*=column] {
            display: inline-block;
        }
        .ms-container ul.ms-list {
            height: 408px;
        }
        .container {
            margin: 20px auto;
        }
    </style>
</head>
<body>
<div class="container" ng-controller="hoursController">

    <div>
        <button style="float: right; margin-right: 40px" ng-click="submit()">Submit</button>
        <h1>{{ staff.name }}</h1>
        <h2>{{ staff.email }}</h2>
        <h2>{{ staff.major.title }}</h2>
        <input ng-model="maxHours" type="text" placeholder="Maximum Hours">
        <input ng-model="phoneNumber" type="text" placeholder="Phone Number">
    </div>

    <div class="left-column">
        <h1>Please Select Availability</h1>
        <div class="time-list">
            <span>Time</span>
            <ol>
                <li ng-repeat="time in times">{{ time }} </li>
            </ol>
        </div>
        <div class="check-list" list="days.monday" check-list>M</div>
        <div class="check-list" list="days.tuesday" check-list>Tu</div>
        <div class="check-list" list="days.wednesday" check-list>W</div>
        <div class="check-list" list="days.thursday" check-list>Th</div>
        <div class="check-list" list="days.friday" check-list>F</div>
    </div>

    <div class="right-column">
        
        <h1>Select Courses</h1>
        <div multiple-select>
            <select id="courses" multiple ng-model="selectedCourses">
                <optgroup label="{{subject}}" 
                    ng-repeat="(subject, courses) in catalog">
                    <option value="{{course._id}}" ng-repeat="course in courses">
                        {{course.subject.prefix}} {{course.number}}
                    </option>
                </optgorup>
            </select>
        </div>
    </div>

</div>

</body>
</html>
